<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvRestaurante2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragmentos.RestaurantesFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="94dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="RESTAURANTES"
                    android:textColor="#EFEFEF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivBurger"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/burger" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBurger"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Burger King"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtBurger"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:gravity="center_vertical"
                                android:text='"Home of the Whopper"'
                                android:textColor="@color/colorBlanco" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv100mon"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/cienmon" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCienMontaditos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="100 Montaditos"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxt100Mon"
                                android:layout_width="match_parent"
                                android:layout_height="53dp"
                                android:gravity="center_vertical"
                                android:text='"Pequeños momentos,                                grandes historias"'
                                android:textColor="@color/colorBlanco" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivDominos"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/dominos" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDominos"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Domino's pizza"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtDominos"
                                android:layout_width="match_parent"
                                android:layout_height="46dp"
                                android:gravity="center_vertical"
                                android:text='"Vender mas pizza, tener mas diversion"'
                                android:textColor="@color/colorBlanco" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivFoster"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/foster" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFoster"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Foster's Hollywood"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtFoster"
                                android:layout_width="match_parent"
                                android:layout_height="51dp"
                                android:gravity="center_vertical"
                                android:text='"Los mejores platos son los que se comparten"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivVips"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/vips" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvVips"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vips"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtVips"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:gravity="center_vertical"
                                android:text='"Muy abierto"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivGoiko"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/goiko" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvGoiko"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Goiko"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtGoiko"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:gravity="center_vertical"
                                android:text='"hacemos burgers,                     cocinamos historias"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivMcdonalds"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/mcdonalds" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvMcdonalds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="McDonald's"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtMcdonalds"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:gravity="center_vertical"
                                android:text='"Lovin´ beat hatin"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivRestaurante1"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/restaurantesopa" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvRestaurante1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Restaurante Desván"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtRestaurante1"
                                android:layout_width="match_parent"
                                android:layout_height="52dp"
                                android:gravity="center_vertical"
                                android:text='"Más allá de los límites del gusto"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivRestaurante2"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/grill" />

                        <LinearLayout
                            android:layout_width="420dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Restaurante Beer and Grill"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtRestaurante2"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text='"Solo para personas hambrientas"'
                                android:textColor="@color/colorBlanco" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivKFC"
                            android:layout_width="400dp"
                            android:layout_height="64dp"
                            android:layout_weight="1"
                            android:src="@drawable/kfc" />

                        <LinearLayout
                            android:layout_width="205dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvKFC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="KFC"
                                android:textColor="@color/colorBlanco"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tvtxtKFC"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:gravity="center_vertical"
                                android:text='"Para chuparse los dedos"'
                                android:textColor="@color/colorBlanco" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>